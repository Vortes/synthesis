{
  "name": "@synthesis/desktop",
  "version": "0.0.0",
  "private": true,
  "main": ".vite/build/main.js",
  "scripts": {
    "dev": "electron-forge start",
    "postinstall": "bash scripts/sign-electron-dev.sh",
    "build:swift": "swiftc swift-helpers/window-info.swift -o swift-helpers/window-info -framework CoreGraphics -framework AppKit",
    "build:native": "cd native && node-gyp rebuild --target=$(node -e \"console.log(require('electron/package.json').version)\") --arch=arm64 --dist-url=https://electronjs.org/headers",
    "build": "pnpm build:swift && pnpm build:native && electron-forge make",
    "package": "electron-forge package"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.61.1",
    "@clerk/themes": "^2.4.55",
    "@synthesis/api": "workspace:^",
    "@synthesis/styles": "workspace:*",
    "@synthesis/ui": "workspace:*",
    "@tanstack/react-query": "^5",
    "@trpc/client": "^11",
    "@trpc/react-query": "^11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/plugin-vite": "^7.6.0",
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/vite": "^4.2.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.1.1",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^12.2.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  }
}
